<script>
             document.addEventListener('DOMContentLoaded', function () {
        const userNameDisplay = document.getElementById('userNameDisplay');
        const userName = localStorage.getItem('userName'); // localStorage'dan kullanıcı adını al

        if (userName) {
            userNameDisplay.innerText = `${userName}`; // Kullanıcı adını göster
        } else {
            userNameDisplay.innerText = 'Login'; // Kullanıcı giriş yapmamışsa
        }
    });


</script>
