    <script>
        document.getElementById("clearPhotosCacheButton").addEventListener("click", async () => {
            try {
                // Backend'deki API endpoint adresini doğru yazın
                const apiUrl = "https://localhost:44314/api/news/ClearPhotosCache";

                // API çağrısı yap
                const response = await fetch(apiUrl, {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                    },
                });

                if (response.ok) {
                    const result = await response.json();
                    alert(result.message); // Backend'den gelen mesaj
                } else {
                    // HTTP Hata Durumu
                    const errorDetails = await response.json();
                    alert(`Bir hata oluştu: ${errorDetails.message || "Fotoğraf belleği temizlenemedi."}`);
                }
            } catch (error) {
                // Sunucuya bağlantı hatası
                console.error("Error:", error);
                alert("Sunucuyla bağlantı kurulamadı.");
            }
        });
    </script>

