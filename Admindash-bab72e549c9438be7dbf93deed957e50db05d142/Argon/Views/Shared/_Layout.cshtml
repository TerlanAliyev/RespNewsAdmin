<!-- _Layout.cshtml -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - Argon Dashboard</title>

    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Summernote CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.20/summernote-bs4.min.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.1/css/all.min.css" integrity="sha512-5Hs3dF2AEPkpNAR7UiOHba+lRSJNeM2ECkwxUIxC1Q/FLycGTbNapWXB4tP889k5T5Ju8fs4b1P5z/iB4nMfSQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet" />

    <!-- Nucleo Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/nucleo-icons/1.0.0/css/nucleo-icons.min.css" rel="stylesheet" />

    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.1/css/all.min.css" integrity="sha512-5Hs3dF2AEPkpNAR7UiOHba+lRSJNeM2ECkwxUIxC1Q/FLycGTbNapWXB4tP889k5T5Ju8fs4b1P5z/iB4nMfSQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- CSS Files -->
    <link id="pagestyle" href="~/css/argon-dashboard.min.css" rel="stylesheet" />


    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/img/9572886.png" sizes="32x32">
   <link href="/css/responsiv.css" rel="stylesheet" />
   <style>
       .fa-bars{
           display:none;
       }
   </style>
</head>



<body class="g-sidenav-show bg-gray-100">
    <i class="fa-solid fa-bars" style="display:none;"></i>
    <!-- Sidebar -->
    @await Html.PartialAsync("_Sidebar")

    <!-- Main Content -->
    <!-- Main Content -->
    <main class="main-content position-relative border-radius-lg">
        <!-- Navbar -->
        @if (ViewData["ShowNavbar"] == null || (bool)ViewData["ShowNavbar"])
        {
            @await Html.PartialAsync("_Navbar")
        }

        <!-- Render Body -->
        <div class="container-fluid py-4">
            @RenderBody()
        </div>
    </main>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <!-- Summernote JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.20/summernote-bs4.min.js"></script>
    <script src="~/js/argon-dashboard.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script>
        $(document).ready(function () {
            // Sidebar açmaq üçün fa-bars klik
            $(".fa-bars").click(function (e) {
                e.stopPropagation(); // Bu, klik hadisəsinin body-yə keçməsinin qarşısını alır
                $(" .sidenav").addClass("open");
            });

            // Sidebar xaricində hər hansı yerə klik
            $(document).click(function () {
                $(" .sidenav").removeClass("open");
            });

            // Sidebar-a kliklə gizlənməməsinin qarşısını al
            $(" .sidenav").click(function (e) {
                e.stopPropagation();
            });
        });
    </script>



    


  
</body>

</html>