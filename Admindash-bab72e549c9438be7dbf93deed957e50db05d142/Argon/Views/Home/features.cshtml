<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<!-- JavaScript -->
<script>
    // Kartları "X" düyməsi ilə silmək
    document.addEventListener("click", function (e) {
        if (e.target.closest(".delete-btn")) {
            const card = e.target.closest(".col-md-4");
            card.querySelector(".card").classList.add("fade-out"); // Animasiyanı əlavə et
            setTimeout(() => {
                card.remove(); // Animasiyadan sonra kartı sil
            }, 500); // 500ms animasiya müddəti
        }
    });

    // Kartları sürükləməklə silmək
    const cards = document.querySelectorAll(".card");
    let draggingCard = null;

    cards.forEach(card => {
        card.addEventListener("dragstart", (e) => {
            draggingCard = card;
            card.classList.add("dragging");
        });

        card.addEventListener("dragend", () => {
            draggingCard = null;
            card.classList.remove("dragging");
        });
    });

    const container = document.getElementById("cardContainer");

    container.addEventListener("dragover", (e) => {
        e.preventDefault();
    });

    container.addEventListener("drop", (e) => {
        if (draggingCard) {
            const dropX = e.clientX;
            const containerRect = container.getBoundingClientRect();
            if (dropX < containerRect.left || dropX > containerRect.right) {
                draggingCard.closest(".col-md-4").querySelector(".card").classList.add("fade-out");
                setTimeout(() => {
                    draggingCard.closest(".col-md-4").remove();
                }, 500);
            }
        }
    });
</script>