<style>
    body {
        background-color: #f8f9fe;
    }

    .view-link {
        align-items: center;
        text-decoration: none;
        text-align:center;
        position: relative;
    }

        .view-link .fa-eye {
            margin-right: 5px; /* İkon ve metin arası boşluk */
        }

        .view-link .news-view-count {
            transition: opacity 0.3s ease; /* Yumuşak geçiş efekti */
            display: none;
        }

        .view-link:hover .news-view-count {
            display:block;
        }

        .view-link:hover .fa-eye {
            margin-right: 0; /* İkonu sola hizalar */
            display: none;
        }

    .table-container {
        padding: 20px;
    }

    .status.active {
        color: #28a745;
        font-weight: bold;
    }

    .status.inactive {
        color: #dc3545;
        font-weight: bold;
    }

    hr {
        background-color: black;
    }

    pagination {
        ul

    {
        li

    {
        padding: 10px;
    }

    }
    }

    .add-news-btn {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #7665E4;
        color: white;
        font-size: 24px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        position: fixed;
        bottom: 20px;
        right: 20px;
        z-index: 1000;
    }

    .card-row {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
        justify-content: center;
    }

    .search-container {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 10px;
        margin-top: 15px;
    }

        .search-container input {
            width: 300px;
            border-radius: 20px;
            padding: 10px 20px;
            border: 1px solid #ccc;
        }

        .search-container button {
            border-radius: 20px;
            padding: 10px 20px;
            background-color: #7665E4;
            color: white;
            border: none;
        }

            .search-container button:hover {
                background-color: #0056b3;
            }
</style>
<link href="/css/responsiv.css" rel="stylesheet" />
<main class="main-content position-relative border-radius-lg">
    <div class="container-fluid py-4">
        <div class="card-row">
            <div class="card col-3 responsiv">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-uppercase font-weight-bold">Azerbaycan dilinde</p>
                                <h5 class="font-weight-bolder">@ViewData["NewsCountAze"]</h5>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-primary shadow-primary text-center rounded-circle" style="display: grid; place-items: center; color: white;">
                                AZ
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card col-3 responsiv">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-uppercase font-weight-bold">Ingilis dilinde</p>
                                <h5 class="font-weight-bolder">@ViewData["NewsCountEng"]</h5>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-primary shadow-primary text-center rounded-circle" style="display: grid; place-items: center; color: white;">
                                EN
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card col-3 responsiv">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-uppercase font-weight-bold">Rus dilinde</p>
                                <h5 class="font-weight-bolder">@ViewData["NewsCountRus"]</h5>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-primary shadow-primary text-center rounded-circle" style="display: grid; place-items: center; color: white;">
                                RU
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="search-container" >
        <input type="text" id="searchInput" placeholder="Haber ara..." class="form-control" />
        <button id="searchButton" class="btn btn-primary" style="margin:0px">Axtar</button>
    </div>
    <a href="/Home/PostNews" class="add-news-btn">
        <i class="fa fa-plus"></i>
    </a>
</main>
<br />
<br />
<div class="container-fluid py-2">
    <div class="container mt-4">
        <h1 class="text-center mb-4">Xəbərlər</h1>
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Haberler Cədvəli</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Başlıq</th>
                                <th scope="col">Şəkil</th>
                                <th scope="col">Tarix</th>
                                <th scope="col">Admin</th>
                                <th scope="col">Müxbir</th>
                                <th scope="col">Status</th>
                                <th scope="col">Əməliyyatlar</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                    <nav aria-label="Pagination">
                        <ul class="pagination justify-content-center">
                            <li class="page-item">
                                <button class="page-link" id="prevPage" disabled>
                                    <i class="fa-solid fa-arrow-left"></i>
                                </button>
                            </li>
                            <li class="page-item">
                                <span class="page-link" id="currentPage" disabled>1</span>
                            </li>
                            <li class="page-item">
                                <button class="page-link" id="nextPage" disabled>
                                    <i class="fa-solid fa-arrow-right"></i>
                                </button>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

